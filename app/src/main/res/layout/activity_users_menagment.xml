<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bidzis.aplikacjatestowajsonrequest.UsersMenagmentActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dodaj/zmień użytkownika"
        android:id="@+id/btAddChangeUser"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UsuN użytkownika"
        android:id="@+id/btDeleteUser"
        android:layout_below="@+id/btAddChangeUser"
        android:layout_alignRight="@+id/btAddChangeUser"
        android:layout_alignEnd="@+id/btAddChangeUser" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wyświetl wszystkich użytkowników"
        android:id="@+id/btShowAllUsers"
        android:layout_below="@+id/btDeleteUser"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktywuj użytkownika"
        android:id="@+id/btActiveUser"
        android:layout_below="@+id/btShowAllUsers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dezaktywuj konto"
        android:id="@+id/btActiveDeactiveUsers"
        android:layout_below="@+id/btActiveAcount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktywuj konto"
        android:id="@+id/btActiveAcount"
        android:layout_below="@+id/btActiveUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
